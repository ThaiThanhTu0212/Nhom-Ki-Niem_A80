<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header: Avatar + Tên + Thời gian -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/bangtin_avatar_default"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background"
                android:clipToOutline="true" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CLB Tình Nguyện Yêu Hoá Vang"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã thêm 10 ảnh mới • khoảng 1 tiếng trước"
                    android:textColor="#888888"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- More vert icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/bangtin_more_vert"
                app:tint="#888888" />
        </LinearLayout>

        <!-- Nội dung bài viết -->
        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Đồng hành cùng bà con về vùng cao Bắc Trà My, Nơi chịu thiệt hại nặng nề do sạt lở, bão số 12 vừa qua... Xem thêm"
            android:textColor="#333333"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp" />

        <!-- Grid ảnh: 1 lớn + 2 nhỏ + +7 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <!-- Ảnh lớn bên trái -->
            <ImageView
                android:id="@+id/imgMain"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_weight="2"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_image"
                android:layout_marginEnd="4dp" />

            <!-- Cột bên phải: 2 ảnh + ô +7 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgSmall1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder_image"
                    android:layout_marginBottom="2dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="2dp">

                    <ImageView
                        android:id="@+id/imgSmall2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/placeholder_image"
                        android:alpha="0.5" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="+7"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Like & Comment -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Like -->
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/bangtin_heart_outline"
                app:tint="#FF5722" />

            <TextView
                android:id="@+id/tvLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 lượt thích"
                android:textColor="#666666"
                android:textSize="13sp"
                android:layout_marginStart="4dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Comment -->
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/bangtin_comment"
                app:tint="#666666" />

            <TextView
                android:id="@+id/tvCommentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 bình luận"
                android:textColor="#666666"
                android:textSize="13sp"
                android:layout_marginStart="4dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>