<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Phần Header: Bảng tin + Chuông thông báo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="#FFFFFF"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bảng tin"
                android:textColor="#333333"
                android:textSize="28sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/bangtin_btn_notification"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Thông báo"
                android:padding="10dp"
                android:src="@drawable/bangtin_notification"
                app:tint="#FF9800" />

        </LinearLayout>

        <!-- TabLayout: Nổi bật | Đang theo dõi -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/bangtin_tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            app:tabGravity="fill"
            app:tabIndicatorColor="#FF9800"
            app:tabMode="fixed"
            app:tabSelectedTextColor="#FF9800"
            app:tabTextColor="#888888" />

    </LinearLayout>

    <!-- RecyclerView danh sách bài viết -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bangtin_recyclerViewNews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout"
        android:clipToPadding="false"
        android:padding="8dp" />

    <!-- NHÃN THÔNG BÁO KHI DANH SÁCH RỖNG -->
    <TextView
        android:id="@+id/bangtin_tv_empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Không có bài viết nào."
        android:textColor="#888888"
        android:textSize="16sp"
        android:visibility="gone" /> <!-- Mặc định ẩn -->

    <!-- Nút tạo bài viết (góc dưới phải) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bangtin_fab_create_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:src="@drawable/bangtin_add_post"
        app:backgroundTint="@color/white"
        app:tint="#FF9800" 
        app:elevation="6dp"/>

</RelativeLayout>
