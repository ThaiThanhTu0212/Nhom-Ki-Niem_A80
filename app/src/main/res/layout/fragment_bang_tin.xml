<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Phần Header: Bảng tin + Chuông thông báo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bảng tin"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <!-- Nút chuông thông báo -->
        <ImageView
            android:id="@+id/bangtin_btn_notification"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/bangtin_notification"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Thông báo"
            android:padding="10dp"
            app:tint="#FF9800" />

        <!-- Badge số 1 trên chuông -->
        <TextView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:text="1"
            android:textSize="10sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bangtin_badge_circle"
            android:gravity="center"
            android:layout_marginStart="-14dp"
            android:layout_marginTop="-6dp" />

    </LinearLayout>

    <!-- TabLayout: Nổi bật | Đang theo dõi -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/bangtin_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="#FFFFFF"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabIndicatorColor="#FF9800"
        app:tabSelectedTextColor="#FF9800"
        app:tabTextColor="#888888" />

    <!-- RecyclerView danh sách bài viết -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bangtin_recyclerViewNews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="108dp"
        android:clipToPadding="false"
        android:padding="8dp" />

    <!-- Nút tạo bài viết (góc dưới phải) -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp">

        <ImageView
            android:id="@+id/bangtin_fab_create_post"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bangtin_fab_selector"
            android:src="@drawable/bangtin_add_post"
            android:scaleType="center"
            android:contentDescription="Tạo bài viết mới"
            android:elevation="8dp" />

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>