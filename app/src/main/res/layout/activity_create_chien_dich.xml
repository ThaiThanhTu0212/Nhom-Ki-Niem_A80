<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".view.TrangChu.ChienDich.CreateChienDichActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:showDividers="middle"
        android:divider="?android:attr/dividerVertical">

        <TextView
            android:id="@+id/tvtenchd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên  chiến dịch" />

        <EditText
            android:id="@+id/edtTenChiendichHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Tên chiến dịch"
            android:inputType="text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả chiến dịch"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

        <EditText
            android:id="@+id/edtMoTa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mô tả"
            android:inputType="textMultiLine|textCapSentences"
            android:minLines="3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ảnh đại diện (URL)"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

        <EditText
            android:id="@+id/edtHinhAnh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="https://..."
            android:inputType="textUri" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số tiền mục tiêu"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

        <EditText
            android:id="@+id/edtSoTienMucTieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ví dụ: 50000000"
            android:inputType="numberDecimal"
            android:maxLines="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số tiền hiện tại"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

        <EditText
            android:id="@+id/edtSoTienHienTai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ví dụ: 1000000"
            android:inputType="numberDecimal"
            android:maxLines="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày bắt đầu"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

        <EditText
            android:id="@+id/edtNgayBatDau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:hint="dd/MM/yyyy"
            android:inputType="date" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày kết thúc"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

        <EditText
            android:id="@+id/edtNgayKetThuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"

            android:hint="dd/MM/yyyy"
            android:inputType="date" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trạng thái"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

        <EditText
            android:id="@+id/edtTrangThai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Đang gây quỹ, Hoàn thành..."
            android:inputType="textCapWords" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tỉnh/Thành phố"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

        <EditText
            android:id="@+id/edtTinhThanh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ví dụ: Hồ Chí Minh"
            android:inputType="textCapWords" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quận/Huyện"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

        <EditText
            android:id="@+id/edtQuanHuyen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ví dụ: Quận 1"
            android:inputType="textCapWords" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ chi tiết"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

        <EditText
            android:id="@+id/edtDiaChi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số nhà, tên đường"
            android:inputType="textCapSentences" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danh mục"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

        <Spinner
            android:id="@+id/spDanhMuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />

        <Button
            android:id="@+id/btnCreateChiendichHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tạo Chiến dịch" />

    </LinearLayout>
</ScrollView>