<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/bangtin_btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/bangtin_arrow_back"
            android:padding="12dp"
            app:tint="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bình luận"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Bài viết gốc -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="12dp">

        <TextView
            android:id="@+id/bangtin_tv_post_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/bangtin_tv_post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/bangtin_tv_post_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Danh sách bình luận -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bangtin_recycler_comments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"/>

    <!-- Ô nhập bình luận -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/bangtin_avatar_default"
            app:civ_border_width="1dp"
            app:civ_border_color="#DDDDDD"/>

        <EditText
            android:id="@+id/bangtin_edt_comment"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            android:hint="Viết bình luận..."
            android:background="@drawable/bangtin_comment_input_bg"
            android:padding="12dp"/>

        <ImageView
            android:id="@+id/bangtin_btn_send"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/bangtin_send"
            app:tint="#0084FF"
            android:padding="10dp"/>
    </LinearLayout>
</LinearLayout>