<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- Avatar người bình luận -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/bangtin_img_avatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/bangtin_avatar_default"
        app:civ_border_width="1dp"
        app:civ_border_color="#E0E0E0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <!-- Bong bóng bình luận -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="280dp"
            android:background="@drawable/bangtin_comment_bubble"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bangtin_tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#1C1E21" />

            <TextView
                android:id="@+id/bangtin_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Cảm ơn các bạn tình nguyện viên rất nhiều!"
                android:textSize="14sp"
                android:textColor="#1C1E21" />
        </LinearLayout>

        <!-- Thời gian -->
        <TextView
            android:id="@+id/bangtin_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Vừa xong"
            android:textColor="#65676B"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>