<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.TrangChu.DanhSachChienDichActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp">

        <ImageView
            android:id="@+id/image_back_tolist"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/home_back"
            app:tint="#FFA500"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="353dp"
            android:layout_height="match_parent"
            android:text="Danh sách chiến dịch nổi bật"
            android:textColor="#333333"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="bold" />

    </LinearLayout>


    <SearchView
        android:id="@+id/searchBarHomeId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        android:queryHint="Tìm kiếm..." />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/loaiCd_ctcd_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listcd_homeRecycleid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>