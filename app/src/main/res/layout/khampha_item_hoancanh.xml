<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="14dp"
    android:background="@drawable/khampha_hoancanh_bg_item_white"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/imgThumb"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/khampha_sukien1"
        android:scaleType="centerCrop"
        android:background="@drawable/khampha_hoancanh_bg_radius_12" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/txtTitle"
            android:text="Hoàn cảnh chị Nguyễn Thị Mộng…"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/khampha_hoancanh_bg_tag"
            android:textColor="#FFA000"
            android:textSize="13sp"
            android:text="Người nghèo" />

        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="#777"
            android:textSize="14sp"
            android:drawableLeft="@drawable/khampha_hoancanh_ic_location"
            android:drawablePadding="6dp"
            android:text="Địa chỉ…" />
    </LinearLayout>

</LinearLayout>
